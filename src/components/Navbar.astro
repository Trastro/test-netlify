---
const { language = 'en' } = Astro.props;
---

<nav class="fixed w-full bg-gray-900/90 backdrop-blur-sm z-50 border-b border-gray-700">
    <div class="max-w-7xl mx-auto px-4 sm-px-6 lg-px-8">
        <div class="flex items-center justify-between h-16">
            <div class="flex items-center gap-2">
                <i data-lucide="layout-template" class="text-blue-400 w-8 h-8"></i>
                <span class="font-bold text-xl text-white">LandingCraft</span>
            </div>
            <div class="hidden md-flex items-center gap-8">
                <a href="#services" class="nav-link">{language === 'en' ? 'Services' : 'Услуги'}</a>
                <a href="#pricing" class="nav-link">{language === 'en' ? 'Pricing' : 'Тарифы'}</a>
                <a href="#contact" class="nav-link">{language === 'en' ? 'Contact' : 'Контакты'}</a>
                <select id="language-selector" class="bg-gray-800 text-white border-none p-2 rounded">
                    <option value="en" selected={language === 'en'}>EN</option>
                    <option value="ru" selected={language === 'ru'}>RU</option>
                </select>
            </div>
            <button class="menu-toggle md-hidden p-2">
                <i data-lucide="menu" class="w-6 h-6 text-white"></i>
            </button>
        </div>
        <div class="mobile-menu hidden bg-gray-900">
            <a href="#services" class="mobile-link">{language === 'en' ? 'Services' : 'Услуги'}</a>
            <a href="#pricing" class="mobile-link">{language === 'en' ? 'Pricing' : 'Тарифы'}</a>
            <a href="#contact" class="mobile-link">{language === 'en' ? 'Contact' : 'Контакты'}</a>
            <select id="mobile-language-selector" class="bg-gray-800 text-white border-none p-2 rounded w-full mt-2">
                <option value="en" selected={language === 'en'}>EN</option>
                <option value="ru" selected={language === 'ru'}>RU</option>
            </select>
        </div>
    </div>
</nav>