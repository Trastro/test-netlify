---
import "../styles/styles.css";
import MainLayout from "../layouts/MainLayout.astro";
import Navbar from "../components/Navbar.astro";
import Process from "../components/Process.astro";

const language = "en";
---

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Home Page</title>
    </head>
    <body>
        <div class="min-h-screen bg-gray-900">
            <!-- Navbar -->
            <nav
                class="fixed w-full bg-gray-900/90 backdrop-blur-sm z-50 border-b border-gray-700"
            >
                <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                    <div class="flex items-center justify-between h-16">
                        <div class="flex items-center gap-2">
                            <i
                                data-lucide="layout-template"
                                class="text-blue-400 w-8 h-8"></i>
                            <span
                                class="font-bold text-xl text-white"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="brandName"
                                >LandingCraft</span
                            >
                            <!-- Editable brand name -->
                        </div>
                        <div class="hidden md:flex items-center gap-8">
                            <a
                                href="#services"
                                class="nav-link"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="navLinks.services"
                                >Services</a
                            >
                            <!-- Editable link text -->
                            <a
                                href="#pricing"
                                class="nav-link"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="navLinks.pricing">Pricing</a
                            >
                            <!-- Editable link text -->
                            <a
                                href="#contact"
                                class="nav-link"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="navLinks.contact">Contact</a
                            >
                            <!-- Editable link text -->
                            <select
                                id="language-selector"
                                class="bg-gray-800 text-white border-none p-2 rounded"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="language"
                            >
                                <!-- Editable language selector -->
                                <option value="en">EN</option>
                                <option value="ru">RU</option>
                            </select>
                        </div>
                        <button class="menu-toggle md:hidden p-2">
                            <i data-lucide="menu" class="w-6 h-6 text-white"
                            ></i>
                        </button>
                    </div>
                    <div class="mobile-menu hidden bg-gray-900">
                        <a
                            href="#services"
                            class="mobile-link"
                            data-sb-object-id="LandingPage"
                            data-sb-field-path="mobileNavLinks.services"
                            >Services</a
                        >
                        <!-- Editable mobile link text -->
                        <a
                            href="#pricing"
                            class="mobile-link"
                            data-sb-object-id="LandingPage"
                            data-sb-field-path="mobileNavLinks.pricing"
                            >Pricing</a
                        >
                        <!-- Editable mobile link text -->
                        <a
                            href="#contact"
                            class="mobile-link"
                            data-sb-object-id="LandingPage"
                            data-sb-field-path="mobileNavLinks.contact"
                            >Contact</a
                        >
                        <!-- Editable mobile link text -->
                        <select
                            id="mobile-language-selector"
                            class="bg-gray-800 text-white border-none p-2 rounded w-full mt-2"
                            data-sb-object-id="LandingPage"
                            data-sb-field-path="mobileLanguage"
                        >
                            <!-- Editable mobile language selector -->
                            <option value="en">EN</option>
                            <option value="ru">RU</option>
                        </select>
                    </div>
                </div>
            </nav>

            <!-- Hero Section -->
            <header
                id="hero"
                class="relative bg-gradient-to-r from-gray-900 to-blue-900 text-white pt-16"
            >
                <div
                    class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 text-center"
                >
                    <div data-lang="en">
                        <h1
                            class="text-4xl md:text-6xl font-bold mb-6"
                            data-sb-object-id="LandingPage"
                            data-sb-field-path="heroTitle"
                        >
                            Creating Modern Websites for<br />
                            <span
                                class="text-gradient"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="heroHighlight"
                                >Your Business</span
                            >
                            <!-- Editable highlighted text -->
                        </h1>
                        <p
                            class="text-xl md:text-2xl mb-8 text-blue-100"
                            data-sb-object-id="LandingPage"
                            data-sb-field-path="heroDescription"
                        >
                            Professional websites with fixed pricing and
                            quality.
                        </p>
                    </div>
                    <div data-lang="ru" class="hidden">
                        <h1
                            class="text-4xl md:text-6xl font-bold mb-6"
                            data-sb-object-id="LandingPage"
                            data-sb-field-path="heroTitleRu"
                        >
                            Создаем современные сайты для<br />
                            <span
                                class="text-gradient"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="heroHighlightRu"
                                >вашего бизнеса</span
                            >
                            <!-- Editable highlighted text in Russian -->
                        </h1>
                        <p
                            class="text-xl md:text-2xl mb-8 text-blue-100"
                            data-sb-object-id="LandingPage"
                            data-sb-field-path="heroDescriptionRu"
                        >
                            Профессиональные сайты с фиксированной ценой и
                            качеством.
                        </p>
                    </div>
                    <div class="flex-center gap-4">
                        <button
                            class="btn btn-blue"
                            data-sb-object-id="LandingPage"
                            data-sb-field-path="ctaButtonText"
                        >
                            Start Project <i
                                data-lucide="arrow-right"
                                class="w-5 h-5"></i>
                        </button>
                        <button
                            class="btn btn-blue-outline"
                            data-sb-object-id="LandingPage"
                            data-sb-field-path="learnMoreButtonText"
                        >
                            Learn More
                        </button>
                    </div>
                </div>
            </header>

            <!-- Our Services Section -->
            <section id="services" class="py-20 px-4 bg-gray-800">
                <div class="max-w-7xl mx-auto text-center">
                    <h2
                        class="text-4xl font-bold mb-12 text-white"
                        data-sb-object-id="LandingPage"
                        data-sb-field-path="servicesTitle"
                        data-lang="en"
                    >
                        Our Services
                    </h2>
                    <h2
                        class="text-4xl font-bold mb-12 text-white hidden"
                        data-sb-object-id="LandingPage"
                        data-sb-field-path="servicesTitleRu"
                        data-lang="ru"
                    >
                        Наши услуги
                    </h2>
                    <div class="grid md:grid-cols-4 gap-8">
                        <div class="service-card">
                            <i
                                data-lucide="code"
                                class="w-8 h-8 text-blue-400 mb-4"></i>
                            <h3
                                class="text-xl font-semibold mb-2"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="services.modernTech.title"
                                data-lang="en"
                            >
                                Modern Tech
                            </h3>
                            <h3
                                class="text-xl font-semibold mb-2 hidden"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="services.modernTech.titleRu"
                                data-lang="ru"
                            >
                                Современные технологии
                            </h3>
                            <p
                                class="text-gray-400"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="services.modernTech.description"
                                data-lang="en"
                            >
                                Using the latest tools for development.
                            </p>
                            <p
                                class="text-gray-400 hidden"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="services.modernTech.descriptionRu"
                                data-lang="ru"
                            >
                                Используем новейшие инструменты для разработки.
                            </p>
                        </div>
                        <div class="service-card">
                            <i
                                data-lucide="zap"
                                class="w-8 h-8 text-blue-400 mb-4"></i>
                            <h3
                                class="text-xl font-semibold mb-2"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="services.rapidDevelopment.title"
                                data-lang="en"
                            >
                                Rapid Development
                            </h3>
                            <h3
                                class="text-xl font-semibold mb-2 hidden"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="services.rapidDevelopment.titleRu"
                                data-lang="ru"
                            >
                                Быстрая разработка
                            </h3>
                            <p
                                class="text-gray-400"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="services.rapidDevelopment.description"
                                data-lang="en"
                            >
                                Fast delivery with quality results.
                            </p>
                            <p
                                class="text-gray-400 hidden"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="services.rapidDevelopment.descriptionRu"
                                data-lang="ru"
                            >
                                Быстрая доставка с качественными результатами.
                            </p>
                        </div>
                        <div class="service-card">
                            <i
                                data-lucide="headphones"
                                class="w-8 h-8 text-blue-400 mb-4"></i>
                            <h3
                                class="text-xl font-semibold mb-2"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="services.customerSupport.title"
                                data-lang="en"
                            >
                                Customer Support
                            </h3>
                            <h3
                                class="text-xl font-semibold mb-2 hidden"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="services.customerSupport.titleRu"
                                data-lang="ru"
                            >
                                Поддержка клиентов
                            </h3>
                            <p
                                class="text-gray-400"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="services.customerSupport.description"
                                data-lang="en"
                            >
                                24/7 support for your needs.
                            </p>
                            <p
                                class="text-gray-400 hidden"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="services.customerSupport.descriptionRu"
                                data-lang="ru"
                            >
                                Поддержка 24/7 для ваших нужд.
                            </p>
                        </div>
                        <div class="service-card">
                            <i
                                data-lucide="shield"
                                class="w-8 h-8 text-blue-400 mb-4"></i>
                            <h3
                                class="text-xl font-semibold mb-2"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="services.security.title"
                                data-lang="en"
                            >
                                Security
                            </h3>
                            <h3
                                class="text-xl font-semibold mb-2 hidden"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="services.security.titleRu"
                                data-lang="ru"
                            >
                                Безопасность
                            </h3>
                            <p
                                class="text-gray-400"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="services.security.description"
                                data-lang="en"
                            >
                                Secure and reliable solutions.
                            </p>
                            <p
                                class="text-gray-400 hidden"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="services.security.descriptionRu"
                                data-lang="ru"
                            >
                                Безопасные и надежные решения.
                            </p>
                        </div>
                    </div>
                </div>
            </section>
            <!-- How We Work Section -->
            <section id="process" class="py-20 px-4 bg-gray-900">
                <div class="max-w-7xl mx-auto text-center">
                    <h2
                        class="text-4xl font-bold mb-12 text-white"
                        data-sb-object-id="LandingPage"
                        data-sb-field-path="howWeWorkTitle"
                        data-lang="en"
                    >
                        How We Work
                    </h2>
                    <h2
                        class="text-4xl font-bold mb-12 text-white hidden"
                        data-sb-object-id="LandingPage"
                        data-sb-field-path="howWeWorkTitleRu"
                        data-lang="ru"
                    >
                        Как мы работаем
                    </h2>
                    <div class="process-grid">
                        <div class="process-card">
                            <div class="icon-circle">
                                <i data-lucide="message-square"></i>
                            </div>
                            <h3
                                class="text-xl font-semibold mb-2"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="processSteps.consultation.title"
                                data-lang="en"
                            >
                                Consultation
                            </h3>
                            <h3
                                class="text-xl font-semibold mb-2 hidden"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="processSteps.consultation.titleRu"
                                data-lang="ru"
                            >
                                Консультация
                            </h3>
                            <p
                                class="text-gray-400"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="processSteps.consultation.description"
                                data-lang="en"
                            >
                                We discuss your goals and requirements.
                            </p>
                            <p
                                class="text-gray-400 hidden"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="processSteps.consultation.descriptionRu"
                                data-lang="ru"
                            >
                                Мы обсуждаем ваши цели и требования.
                            </p>
                        </div>
                        <div class="process-card">
                            <div class="icon-circle">
                                <i data-lucide="code"></i>
                            </div>
                            <h3
                                class="text-xl font-semibold mb-2"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="processSteps.development.title"
                                data-lang="en"
                            >
                                Development
                            </h3>
                            <h3
                                class="text-xl font-semibold mb-2 hidden"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="processSteps.development.titleRu"
                                data-lang="ru"
                            >
                                Разработка
                            </h3>
                            <p
                                class="text-gray-400"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="processSteps.development.description"
                                data-lang="en"
                            >
                                We build your site using modern tech.
                            </p>
                            <p
                                class="text-gray-400 hidden"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="processSteps.development.descriptionRu"
                                data-lang="ru"
                            >
                                Мы создаем сайт с использованием современных
                                технологий.
                            </p>
                        </div>
                        <div class="process-card">
                            <div class="icon-circle">
                                <i data-lucide="rocket"></i>
                            </div>
                            <h3
                                class="text-xl font-semibold mb-2"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="processSteps.launch.title"
                                data-lang="en"
                            >
                                Launch
                            </h3>
                            <h3
                                class="text-xl font-semibold mb-2 hidden"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="processSteps.launch.titleRu"
                                data-lang="ru"
                            >
                                Запуск
                            </h3>
                            <p
                                class="text-gray-400"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="processSteps.launch.description"
                                data-lang="en"
                            >
                                We launch your site, fully optimized.
                            </p>
                            <p
                                class="text-gray-400 hidden"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="processSteps.launch.descriptionRu"
                                data-lang="ru"
                            >
                                Мы запускаем ваш сайт с полной оптимизацией.
                            </p>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Pricing Plans Section -->
            <section id="pricing" class="py-20 px-4 bg-gray-800">
                <div class="max-w-7xl mx-auto text-center">
                    <h2
                        class="text-4xl font-bold mb-12 text-white"
                        data-sb-object-id="LandingPage"
                        data-sb-field-path="pricingSectionTitle"
                        data-lang="en"
                    >
                        Pricing Plans
                    </h2>
                    <h2
                        class="text-4xl font-bold mb-12 text-white hidden"
                        data-sb-object-id="LandingPage"
                        data-sb-field-path="pricingSectionTitleRu"
                        data-lang="ru"
                    >
                        Наши тарифы
                    </h2>
                    <div class="grid md:grid-cols-4 gap-8">
                        <!-- Tariff 1 -->
                        <div class="pricing-card">
                            <div
                                class="text-5xl font-bold text-blue-400 mb-4"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="pricingPlans[0].price"
                                data-lang="en"
                            >
                                $299
                            </div>
                            <div
                                class="text-4xl font-bold text-blue-400 mb-4 hidden"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="pricingPlans[0].priceRu"
                                data-lang="ru"
                            >
                                25 000 ₽
                            </div>
                            <h3
                                class="text-xl font-semibold mb-2"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="pricingPlans[0].title"
                                data-lang="en"
                            >
                                Landing Page
                            </h3>
                            <h3
                                class="text-xl font-semibold mb-2 hidden"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="pricingPlans[0].titleRu"
                                data-lang="ru"
                            >
                                Лендинг-визитка
                            </h3>
                            <div class="feature-grid">
                                <div class="feature-item">
                                    <i
                                        data-lucide="check-circle-2"
                                        class="text-green-500"></i>
                                    <span
                                        data-sb-object-id="LandingPage"
                                        data-sb-field-path="pricingPlans[0].features.uniqueDesign"
                                        data-lang="en">Unique Design</span
                                    >
                                    <span
                                        data-sb-object-id="LandingPage"
                                        data-sb-field-path="pricingPlans[0].features.uniqueDesignRu"
                                        data-lang="ru"
                                        class="hidden">Уникальный дизайн</span
                                    >
                                </div>
                                <div class="feature-item">
                                    <i
                                        data-lucide="check-circle-2"
                                        class="text-green-500"></i>
                                    <span
                                        data-sb-object-id="LandingPage"
                                        data-sb-field-path="pricingPlans[0].features.responsiveLayout"
                                        data-lang="en">Responsive Layout</span
                                    >
                                    <span
                                        data-sb-object-id="LandingPage"
                                        data-sb-field-path="pricingPlans[0].features.responsiveLayoutRu"
                                        data-lang="ru"
                                        class="hidden">Адаптивный дизайн</span
                                    >
                                </div>
                                <div class="feature-item">
                                    <i
                                        data-lucide="check-circle-2"
                                        class="text-green-500"></i>
                                    <span
                                        data-sb-object-id="LandingPage"
                                        data-sb-field-path="pricingPlans[0].features.seoOptimization"
                                        data-lang="en">SEO Optimization</span
                                    >
                                    <span
                                        data-sb-object-id="LandingPage"
                                        data-sb-field-path="pricingPlans[0].features.seoOptimizationRu"
                                        data-lang="ru"
                                        class="hidden">SEO-оптимизация</span
                                    >
                                </div>
                                <div class="feature-item">
                                    <i
                                        data-lucide="check-circle-2"
                                        class="text-green-500"></i>
                                    <span
                                        data-sb-object-id="LandingPage"
                                        data-sb-field-path="pricingPlans[0].features.delivery"
                                        data-lang="en">7-Day Delivery</span
                                    >
                                    <span
                                        data-sb-object-id="LandingPage"
                                        data-sb-field-path="pricingPlans[0].features.deliveryRu"
                                        data-lang="ru"
                                        class="hidden">Доставка за 7 дней</span
                                    >
                                </div>
                            </div>
                            <button
                                class="btn btn-blue-outline"
                                onclick="goToContact('landing-page')"
                            >
                                Select
                            </button>
                        </div>
                        <!-- Tariff 2 -->
                        <div class="pricing-card highlighted">
                            <div
                                class="text-5xl font-bold text-blue-400 mb-4"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="pricingPlans[1].price"
                                data-lang="en"
                            >
                                $590
                            </div>
                            <div
                                class="text-4xl font-bold text-blue-400 mb-4 hidden"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="pricingPlans[1].priceRu"
                                data-lang="ru"
                            >
                                49 000 ₽
                            </div>
                            <h3
                                class="text-xl font-semibold mb-2"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="pricingPlans[1].title"
                                data-lang="en"
                            >
                                Services Sector
                            </h3>
                            <h3
                                class="text-xl font-semibold mb-2 hidden"
                                data-sb-object-id="LandingPage"
                                data-sb-field-path="pricingPlans[1].titleRu"
                                data-lang="ru"
                            >
                                Сфера услуг
                            </h3>
                            <div class="feature-grid">
                                <div class="feature-item">
                                    <i
                                        data-lucide="check-circle-2"
                                        class="text-green-500"></i>
                                    <span
                                        data-sb-object-id="LandingPage"
                                        data-sb-field-path="pricingPlans[1].features.allLandingFeatures"
                                        data-lang="en"
                                        >All Landing Features</span
                                    >
                                    <span
                                        data-sb-object-id="LandingPage"
                                        data-sb-field-path="pricingPlans[1].features.allLandingFeaturesRu"
                                        data-lang="ru"
                                        class="hidden"
                                        >Все из тарифа "Лендинг"</span
                                    >
                                </div>
                                <div class="feature-item">
                                    <i
                                        data-lucide="check-circle-2"
                                        class="text-green-500"></i>
                                    <span
                                        data-sb-object-id="LandingPage"
                                        data-sb-field-path="pricingPlans[1].features.bookingCalendar"
                                        data-lang="en">Booking Calendar</span
                                    >
                                    <span
                                        data-sb-object-id="LandingPage"
                                        data-sb-field-path="pricingPlans[1].features.bookingCalendarRu"
                                        data-lang="ru"
                                        class="hidden">Календарь записи</span
                                    >
                                </div>
                                <div class="feature-item">
                                    <i
                                        data-lucide="check-circle-2"
                                        class="text-green-500"></i>
                                    <span
                                        data-sb-object-id="LandingPage"
                                        data-sb-field-path="pricingPlans[1].features.contactForm"
                                        data-lang="en">Contact Form</span
                                    >
                                    <span
                                        data-sb-object-id="LandingPage"
                                        data-sb-field-path="pricingPlans[1].features.contactFormRu"
